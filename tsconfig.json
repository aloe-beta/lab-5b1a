{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "checkJs": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types" 
        ],
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "lib": ["ESNext", "DOM", "DOM.Iterable"]
    }
}
